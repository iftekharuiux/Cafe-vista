<%- include("../../partials/head.ejs") %>
</head>

<body>
    <%- include("../../partials/alert.ejs") %>
    <%- include("../../partials/header.ejs") %>
    <section id="admin-intro">
        <div class="breadcrumb">
            <h1>OUR BLOG</h1>
            <p><span>HOME</span> / BLOG</p>
        </div>
    </section>
    </header>
    <!-- show blogs -->
    <section id="our-blog" class="blogs">
        <div class="container-sm">
            <div class="sm-heading" style="width: 100%;">
                <p style="text-align: center"><span>BLOG</span></p>
            </div>
            <div class="blog-heading">
                <h2>SHOW ALL BLOGS</h2>
                <a href="/blog/create#create-blog"><button><i class="bi bi-plus-lg"></i> Create New</button></a>
            </div>
            <div class="show-blog">
                <div class="container-sm">
                    <div class="full-row">
                        <% if(blogs && blogs.length > 0) { %>
                        <% blogs.forEach((blog) => { %>
                        <div class="single-blog">
                            <div class="blog-img">
                                <img src="<%= blog.thumbnail %>" alt="blog-1">
                            </div>
                            <div class="blog-des">
                                <small>
                                    <span>By:</span>
                                    <span class="name"><%= blog.author.username %> ,</span>
                                    <span class="date">
                                        <%= blog.createdAt.toLocaleDateString() %>
                                    </span>
                                </small>
                                <h3><a href="/blog/show/<%= blog._id %>"><%= blog.title %></a></h3>
                                <a href="/blog/show/<%= blog._id %>">READ MORE <i class="bi bi-arrow-right"></i></a>
                            </div>
                        </div>
                        <% }) %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include("../../partials/footer.ejs") %>
    <script src="/scripts/motion.js"></script>
</body>

</html>