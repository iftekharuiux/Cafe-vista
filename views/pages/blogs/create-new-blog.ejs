<%- include("../../partials/head.ejs") %>
</head>

<body>
    <%- include("../../partials/alert.ejs") %>
    <%- include("../../partials/header.ejs") %>
    <section id="admin-intro">
        <div class="breadcrumb">
            <h1>OUR BLOG</h1>
            <p><span>HOME</span> / BLOG / CREATE</p>
        </div>
    </section>
    </header>
    <!-- create a new blog -->
    <section id="create-blog">
        <div class="container-sm">
            <div class="sm-heading">
                <span>BLOG</span>
            </div>
            <h1>
                CREATE A NEW BLOG
            </h1>
            <form class="full-row" action="/blog/create/" enctype="multipart/form-data" method="post">
                <h2>Create A New Blog</h2>
                <input type="text" class="<%= errors.title && "is-invalid"%>" name="title" placeholder="Blog Title"
                    value="<%= errors.title && values.title %>">
                <% if (errors.title) { %>
                <div class="invalid-feedback">
                    <p><%= errors.title %></p>
                </div>
                <% } %>
                <textarea name="body" id="rich-text-editor" placeholder="Enter your blog body">
                    <%= values.body %>
                </textarea>
                <% if (errors.body) { %>
                <div class="invalid-feedback">
                    <p><%= errors.body %></p>
                </div>
                <% } %>
                <input type="file" name="upload-thumbnail" title="Upload Thumbnail">
                <button type="submit">Create Post</button>
            </form>
        </div>
    </section>

    <%- include("../../partials/footer.ejs") %>
    <script src="https://cdn.tiny.cloud/1/krhy9mhjyfjmqleti0ocuazimfiooc4z8kmmmh338ygbrkr4/tinymce/7/tinymce.min.js"
        referrerpolicy="origin"></script>
    <script src="/scripts/create-new-blog.js"></script>
</body>

</html>